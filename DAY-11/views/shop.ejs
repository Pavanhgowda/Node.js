<%- include('includes/head.ejs')  %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %> 

    <main>
        <% if(product.length>0) { %>
        <div class="grid">
            <% for(let prods of product){%>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= prods.title %></h1>
                </header>
                <div class="card__image">
                    <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.freepik.com%2Fphotos%2Fbook&psig=AOvVaw1iAzn2HzCGtKrXYje59Zap&ust=1705074335858000&source=images&cd=vfe&opi=89978449&ved=0CBMQjRxqFwoTCIirl4PX1YMDFQAAAAAdAAAAABAD" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$19.99</h2>
                    <p class="product__description">A very interesting book about so many even more interesting things!</p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add to Cart</button>
                </div>
            </article>
            <% } %>
        </div> 
        <% } else { %>
            <h1>No products found!</h1>
        <% } %>    
    </main>
    
<%- include('includes/end.ejs') %>